<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adarsh45.quizitup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizItUp"
        android:usesCleartextTraffic="true">
        <activity android:name="com.adarsh45.quizitup.SubmissionsActivity"></activity>
        <activity android:name="com.adarsh45.quizitup.AttemptQuizActivity" />
        <activity
            android:name="com.adarsh45.quizitup.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.adarsh45.quizitup.ProfileActivity" />
        <activity android:name="com.adarsh45.quizitup.QuizListActivity" />
        <activity android:name="com.adarsh45.quizitup.CreateQuizActivity" />
        <activity android:name="com.adarsh45.quizitup.HomeActivity" />
        <activity
            android:name="com.adarsh45.quizitup.LoginActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
    </application>

</manifest>